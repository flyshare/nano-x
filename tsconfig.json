{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@engine/*": [
                "engine/*"
            ],
            "@tools/*": [
                "tools/*"
            ],
            "@session/*": [
                "session/*"
            ],
            "@types/*": [
                "types/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}